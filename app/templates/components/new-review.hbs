{{#if addNewReview}}
  <h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="reviewer">Name of Reviewer</label>
        {{input value=reviewer id="reviewer"}}
      </div>

      <div class="form-group">
        <label for="text">Review</label>
        {{textarea value=text id="text"}}
      </div>
      <button {{action 'saveReview1' rental}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}}>New Review</button>
{{/if}}
